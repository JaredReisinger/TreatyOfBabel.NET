    <Style TargetType="{x:Type Expander}" x:Key="ListViewGroupExpander">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Expander}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="0" x:Name="ContentRow" />
                        </Grid.RowDefinitions>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="12" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <ToggleButton OverridesDefaultStyle="True"
                                          Template="{StaticResource ListViewGroupExpanderToggleButton}"
                                          IsChecked="{Binding IsExpanded, Mode=TwoWay, 
                                          RelativeSource={RelativeSource TemplatedParent}}"
                                          Background="White">
                                <!--<ToggleButton.Background>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="{DynamicResource ControlLightColor}" Offset="0" />
                                        <GradientStop Color="{DynamicResource ControlMediumColor}" Offset="1" />
                                    </LinearGradientBrush>
                                </ToggleButton.Background>-->
                            </ToggleButton>
                            <ContentPresenter Grid.Column="1"
                                              Margin="4"
                                              ContentSource="Header"
                                              TextElement.Foreground="#FF1E3287"
                                              TextElement.FontSize="15.75"
                                              RecognizesAccessKey="True" />
                            <Path Grid.Column="2"
                                  Data="M 0 0 L 10 0"
                                  Stroke="#ffE5E5E5"
                                  StrokeThickness="1"
                                  VerticalAlignment="Center"
                                  Margin="5,2,10,0"
                                  Stretch="Fill"
                                  HorizontalAlignment="Stretch" />
                        </Grid>
                        <ContentPresenter Grid.Row="1" Margin="0,4" />
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsExpanded" Value="True">
                            <Setter TargetName="ContentRow" Property="Height" Value="{Binding DesiredHeight, ElementName=Content}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>