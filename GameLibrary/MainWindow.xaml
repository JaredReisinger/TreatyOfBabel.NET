                            <TextBlock Text="{Binding Author}" TextTrimming="CharacterEllipsis" />
                            <!- -<TextBlock Text="{Binding Path}" FontSize="10" Foreground="Silver" TextTrimming="CharacterEllipsis" />- ->
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>-->
        </ListView>

